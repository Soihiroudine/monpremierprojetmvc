<section class="container">
    
    <h2>Connexion</h2>
    <hr>
    <form class="form-horizontal" action="/connexion" method="post">
        <div class="form-group">
            <label for="email" class="control-label col-sm-2">Adresse email</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email" name="email" placeholder="Adresse email" required
                    pattern="[a-z]+@[a-z0-9.-]+\.[a-z]{2,4}$">
            </div>
        </div>
        <div class="form-group">
            <label for="password" class="control-label col-sm-2">Mot de passe</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password" name="password" placeholder="Mot de passe"
                    required>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Se connecter</button>
        </div>
    </form>
</section>