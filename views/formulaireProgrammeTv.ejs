<section class="container">
    <h1>Ajout de programme Tv</h1>
    <section id="formulaireProgramme">
        <form class="form-horizontal" action="/ajoutProgramme" method="post">
            <div class="form-group">
                <label for="nomProgramme" class="control-label col-sm-2">Nom</label>
                <div class="col-sm-10">
                    <input type="text" name="nomProgramme" id="nomProgramme" class="form-control" required>
                </div>
            </div>

            <div class="form-group">
                <label for="diffusion" class="control-label col-sm-2">Date diffusion</label>
                <div class="col-sm-10">
                    <input type="date" name="diffusion" id="diffusion" class="form-control" required>
                </div>
            </div>

            <div class="form-group">
                <label for="heure_diffusion" class="control-label col-sm-2">Heure diffusion</label>
                <div class="col-sm-10">
                    <input type="time" name="heure_diffusion" id="heure_diffusion" class="form-control" required>
                </div>
            </div>

            <div class="form-group">
                <label for="description" class="control-label col-sm-2">Description</label>
                <div class="col-sm-10">
                    <textarea name="description" id="description" rows="5" class="form-control" height="5" required></textarea>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Entree" class="btn btn-default">
            </div>
        </form>
</section>